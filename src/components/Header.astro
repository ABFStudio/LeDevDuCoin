---
import logo from "../images/logo-dark.png"
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src={logo} alt="Logo of the website" />
      </a>
    </div>
    <nav>
      <svg class="hamburger" viewBox="0 0 100 80" width="40" height="40" fill="#fff">
        <rect width="100" height="20"></rect>
        <rect y="30" width="100" height="20"></rect>
        <rect y="60" width="100" height="20"></rect>
      </svg>
      <ul>
        <li>
          <a href="/">Accueil</a>
        </li>
        <li>  
          <a href="/services">Services</a>
        </li>
        <li>
          <a href="/about">A propos</a>
        </li>
        <li>
          <a href="/blog">Blog</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    height: 70px;
    background: #000;
  }

  .header .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  .header img {
    padding-top: 10px;
    height: 110px;
    width: 120px;
    vertical-align: middle;
  }

  .header nav ul {
    display: flex;
  }

  .header nav ul li {
    padding: 0 10px;
  }

  .header nav ul li a {
    color: #fff;
  }

  .hamburger {
    display: none;
  }

  @media (max-width: 500px) {
    .header nav li {
      display: none;
    }

    .hamburger {
      display: block;
    }
  }
</style>
